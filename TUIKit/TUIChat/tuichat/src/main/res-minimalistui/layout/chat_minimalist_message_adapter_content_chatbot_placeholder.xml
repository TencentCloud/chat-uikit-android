<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/text_frame"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/content_image_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:src="@drawable/chat_chatbot_waiting_icon"/>

    <com.tencent.qcloud.tuikit.timcommon.minimalistui.widget.message.TimeInLineTextLayout
        android:id="@+id/text_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

